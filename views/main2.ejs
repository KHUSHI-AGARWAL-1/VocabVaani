<body>
  <nav>
    <div class="img">
      <img src="/logo2k.png">
    </div>
    <div class="name">VocabVaani</div>
    <div class="right">
      <a href="#">Home</a>
      <a href="/abt">About Us</a>
      <a href="#contact">Contact</a>
      <div class="dropdown">
        <span class="material-symbols-outlined" id="dropdown-btn">
          menu
        </span>
        <div class="dropdown-content">
          <a href="/viewprofile?username=<%= username %>">My Profile</a>
          <a href="/faqs">FAQs</a>
          <a href="/user/history">History</a>
          <a href="/settings">Settings</a>
          <a href="test/test-signout">Logout</a>
          <a href="/delete">Delete Account</a>
        </div>

      </div>

    </div>
  </nav>
  <div class="main">
  <div class="word-section">
    <h2 class="hed">
      <%= word%>
    </h2>

    <button onclick="speakWord('<%= word %>')"><i class="fa-solid fa-volume-high"></i></button>
  </div>

  <main>
    <div class="definition-section">
      <h2>Definition</h2>
      <ul>
        <%for(let item of truedefinition){%>
          <li>
            <%=item%>
          </li>
          <%}%>
      </ul>
    </div>

    <div class="antonyms-section">
      <h2>Antonyms</h2>
      <ul>
        <% thesaurusResult.antonyms.slice(0, 6).forEach((antonym)=> { %>
          <li>
            <%= antonym %>
          </li>
          <% }); %>
      </ul>
    </div>

    <div class="synonyms-section">
      <h2>Synonyms</h2>
      <ul>
        <% thesaurusResult.synonyms.slice(0, 6).forEach((antonym)=> { %>
          <li>
            <%= antonym %>
          </li>
          <% }); %>
      </ul>
    </div>

    <div class="rhymings-section">
      <h2>Rhymings</h2>
      <ul>
        <% rhymeResult.slice(0,6).forEach((rhyme)=> { %>
          <li>
            <%= rhyme %>
          </li>
          <% }); %>
      </ul>
    </div>
  </main>
</div>


  <div id="footer">
    <div id="social" class="box">
      <h1 class="headi">VocabVaani</h1>
      <p class="inner"> Dictionary.com</p>
